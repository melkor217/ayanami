<p id="notice"><%= notice %></p>

<h1>Listing Countries</h1>

<table id="table" style="cursor: pointer;"
       data-toggle="table"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-flat="true"
       data-url="<%= countries_url(format: :json) %>"
       data-pagination="true"
       data-side-pagination="server"
       data-no-turbolink="true"
       data-search="true"
       data-page-list="[10, 25, 50, 100]"
       data-sort-name="<%= params[:sort] %>"
       data-sort-order="<%= params[:order] %>"
       data-search-text="<%= params[:search] %>">
  <thead>
  <tr>
    <th data-formatter="runningFormatter">Position</th>
    <th data-field="flag" data-sortable="true">Flag</th>
    <th data-field="country" data-sortable="true">Country</th>
    <th data-field="players_total" data-sortable="true">Players</th>
    <th data-field="avg_activity" data-sortable="true">Activity</th>
  </tr>
  </thead>
</table>
<br>
