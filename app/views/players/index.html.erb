<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>
<div class="alert alert-success" id="eventsResult">
  Here is the result of event.
</div>
<table id="table" style="cursor: pointer;"
       data-toggle="table"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-flat="true"
       data-url="http://localhost:3000/players.json?"
       data-pagination="true"
       data-side-pagination="server"
       data-no-turbolink="true"
       data-search="true"
       data-page-list="[10, 25, 50, 100]"
       data-sort-name="<%= params[:sort] %>"
       data-sort-order="<%= params[:order] %>"
       data-search-text="<%= params[:search] %>"
       data-page-size="<%= params[:limit] %>"
       data-page-number="<%= params[:page] %>">
  <thead>
  <tr>
    <th data-formatter="runningFormatter">Position</th>
    <th data-field="playerId" data-sortable="true">ID</th>
    <th data-field="lastName" data-sortable="true">Name</th>
    <th data-field="skill" data-sortable="true">Skill</th>
    <th data-field="activity" data-sortable="true">Activity</th>
    <th data-field="kills" data-sortable="true">Kills</th>
    <th data-field="deaths" data-sortable="true">Deaths</th>
    <th data-field="kpd" data-sortable="true">K/D</th>
    <th data-field="headshots" data-sortable="true">Headshots</th>
  </tr>
  </thead>
</table>
