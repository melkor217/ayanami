<p id="notice"><%= notice %></p>


<div class="row">

  <div class="col-md-4">
    <table class="table table-bordered">
      <tbody>
      <tr>
        <td>Name</td>
        <td> <%= @player.lastName %> </td>
      </tr>
      <tr>
        <td>Kills</td>
        <td> <%= @player.kills %> </td>
      </tr>
      <tr>
        <td>Deaths</td>
        <td> <%= @player.deaths %> </td>
      </tr>
      <tr>
        <td>Headshots</td>
        <td> <%= @player.headshots %> </td>
      </tr>
      <tr>
        <td>K/D</td>
        <td> <%= (@player.kills.to_f / @player.deaths).round(2) %> </td>
      </tr>
      <tr>
        <td>Activity</td>
        <td>
            <span class="progress-bar" role="progressbar" aria-valuenow="<%= @player.activity %>"
                 aria-valuemin="0" aria-valuemax="100" style="width:<%= @player.activity %>%">
              <%= @player.activity %>%
            </span>
        </td>
      </tr>
      </tbody>
    </table>

  </div>
</div>

<%= link_to 'Back', :back %>
